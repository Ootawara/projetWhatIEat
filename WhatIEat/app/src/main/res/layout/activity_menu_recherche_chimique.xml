<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.epsi.whatieat.MenuRechercheChimique">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Précédent"
        android:id="@+id/chimique_search_previous"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:id="@+id/chimique_search_menu"
        android:layout_alignTop="@+id/chimique_search_previous"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Menu de Recherche Chimique"
        android:id="@+id/textView2"
        android:layout_below="@+id/chimique_search_previous"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextProd1"
        android:text="Entrer un produit"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/chimique_search_menu"
        android:layout_marginTop="31dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lancer la recherche"
        android:id="@+id/buttonRechercheChimique"
        android:layout_marginTop="51dp"
        android:layout_alignTop="@+id/editTextProd1"
        android:layout_alignParentEnd="true" />

    <ListView
        android:id="@+id/listeResultatChimique"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/buttonRechercheChimique"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
