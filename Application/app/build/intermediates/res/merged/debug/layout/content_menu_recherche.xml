<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.epsi.whatieat.projetwhatieat.MenuRecherche"
    tools:showIn="@layout/activity_menu_recherche">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Menu de Recherche"
        android:id="@+id/textViewMenuRecherche"
        android:layout_marginTop="43dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_below="@+id/textViewMenuRecherche"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp"
        android:layout_toStartOf="@+id/textViewMenuRecherche"
        android:layout_alignRight="@+id/textViewMenuRecherche"
        android:layout_alignEnd="@+id/textViewMenuRecherche"
        android:text="Produit ou aliments" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSymp2"
        android:layout_marginTop="42dp"
        android:text="Symptôme 2"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSymp3"
        android:layout_marginTop="42dp"
        android:text="Symptôme 3"
        android:layout_below="@+id/editTextSymp2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextSymp2"
        android:layout_alignEnd="@+id/editTextSymp2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rechercher"
        android:id="@+id/buttonRecherche"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/editTextSymp3"
        android:layout_alignLeft="@+id/textViewMenuRecherche"
        android:layout_alignStart="@+id/textViewMenuRecherche"
        android:layout_alignRight="@+id/editTextSymp3"
        android:layout_alignEnd="@+id/editTextSymp3" />

</RelativeLayout>
